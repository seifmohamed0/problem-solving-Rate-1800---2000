#include <bits/stdc++.h> 
using namespace std;

int main() 
{
    int t;
    cin>>t;
    while(t--){
    	int n;
    	cin>>n;
    	int pp = 2;
    	while(pp * (pp + 1) / 2 <= n)
    		++pp;
    	n -= pp * (pp - 1) / 2;
    	cout<<133;
    	while(n > 0){
    		n--;
			cout<<7;
    	}
    	pp -= 2;
    	while(pp > 0){
    		pp--;
    		cout<<3;
    	}
    	cout<<7<<endl;
    }
    return 0;
} 
